{
  "manifest_version": 3,
  "name": "Twitter(X) Auto Liker",
  "version": "1.0",
  "description": "Twitter(X)の自動いいねツール",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}